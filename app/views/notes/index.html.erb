<%= render "header" %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-2 text-align: left bg-light pt-3">
          <h5>ノート一覧</h5>
          <table>
            <% @notes.each do |note| %>
              <tr>
                <td><%= link_to note.title, note_path(note), class:"link-none" %></td>
              </tr>
            <% end %>
          </table>
        </div>
        <div class="col-9 pt-3">
          <%= form_with(model: @note, local: true) do |form| %>
              <div class="form_group pt-4 pb-5">
                <%= form.label :title %><br>
                <%= form.text_field :title, class: "form-control"  %>
              </div>
            
              <div class="form_group pt-4 pb-3">
                <%= form.label :text %><br>
                <%= form.text_area :text, rows: 20, class: "form-control" %>
              </div>
              
              <div class="text-center"> 
                <%= form.submit "保存", class: "btn btn-primary" %>
              </div>
          <% end %>
        </div>
      </div>
    </div>